<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - TeeTimeWebApp</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

	<nav>
		<header>
			<h1><a href="/Index">TeeTimeWebApp</a></h1>
		</header>
		<ul>
			<li><a href="/Login">Login</a></li>
		</ul>
	</nav>

	<main>
		@RenderBody()
	</main>

	<footer>
		@if (IsSectionDefined("FooterContent"))
		{
			@RenderSection("FooterContent", required: false)
		}
		else
		{
			<p>&copy; 2024 - TeeTimeWebApp</p>
		}
	</footer>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
